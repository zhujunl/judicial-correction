<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:text="高拍仪扫描"
            android:textColor="#333"
            android:textSize="30px"
            app:layout_constraintBottom_toTopOf="@id/sv"
            app:layout_constraintLeft_toLeftOf="@id/sv"
            app:layout_constraintRight_toRightOf="@id/sv" />

        <SurfaceView
            android:id="@+id/sv"
            android:layout_width="580px"
            android:layout_height="750px"
            android:layout_marginTop="50px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/sBar"
            app:layout_constraintTop_toBottomOf="@id/sv"
            android:layout_width="match_parent"
            android:layout_marginTop="20px"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_marginStart="15px"
            android:layout_marginTop="70px"
            android:layout_marginEnd="10px"
            android:text="请将纸质文件放置高拍仪指定位置进行拍摄扫描"
            android:textColor="#333"
            android:textSize="30px"
            app:layout_constraintLeft_toRightOf="@id/sv"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_screen"
            android:layout_width="200px"
            android:layout_height="90px"
            android:background="@drawable/bg_btn_back_to_home_7"
            android:gravity="center"
            android:text="拍摄"
            android:textColor="@color/color_text_white"
            android:textSize="32px"
            app:layout_constraintRight_toRightOf="@id/tv_hint"
            app:layout_constraintLeft_toRightOf="@id/sv"
            app:layout_constraintTop_toBottomOf="@id/tv_hint" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_try_again"
            android:layout_width="200px"
            android:layout_height="90px"
            android:layout_marginTop="100px"
            android:background="@drawable/bg_btn_back_to_home_7"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/color_text_white"
            android:textSize="32px"
            app:layout_constraintRight_toRightOf="@id/tv_hint"
            app:layout_constraintLeft_toRightOf="@id/sv"
            app:layout_constraintTop_toBottomOf="@id/btn_screen" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20px"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="50px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_hint">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="预览"
                android:textColor="#333"
                android:textSize="48px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(说明：单击：预览，长按：删除)"
                android:textColor="#333"
                android:textSize="30px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginEnd="20px"
                android:layout_marginTop="20px"
                android:background="#D7D7D7" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="150px"
            android:layout_marginStart="20px"
            android:id="@+id/rv_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_hint"
            android:layout_width="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>