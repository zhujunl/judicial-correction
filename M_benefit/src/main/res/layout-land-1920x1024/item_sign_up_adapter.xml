<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0px"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bg_item_sign_up">


        <TextView
            android:id="@+id/tv_theme_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text="活动主题："
            android:textColor="#333333"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_theme_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:layout_toEndOf="@id/tv_theme_label"
            android:textColor="#333333"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="内容" />


        <TextView
            android:id="@+id/tv_activity_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_theme_label"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="活动时间："
            android:textColor="#666"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/tv_activity_time_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_theme_label"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/tv_activity_time_label"
            android:textColor="#666"
            android:textSize="30sp"
            tools:text="时间：" />


        <TextView
            android:id="@+id/tv_activity_time_long_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_activity_time_label"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="活动时长："
            android:textColor="#666"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/tv_activity_time_long_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_activity_time_label"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/tv_activity_time_long_label"
            android:textColor="#666"
            android:textSize="30sp"
            tools:text="3小时" />


        <TextView
            android:id="@+id/tv_activity_location_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_activity_time_long_label"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="活动地点："
            android:textColor="#666"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/tv_activity_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_activity_time_long_label"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="100dp"
            android:layout_toEndOf="@id/tv_activity_location_label"
            android:textColor="#666"
            android:textSize="30sp"
            tools:text="各社区" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_below="@id/tv_activity_time_long_label"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/tv_activity_location"
            android:background="@drawable/bg_gray_oval_5"
            android:gravity="center"
            android:textColor="#5C5A5A"
            android:textSize="30dp"
            tools:text="集体劳动" />


        <TextView
            android:id="@+id/tv_state"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_below="@id/tv_activity_time_label"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bg_gray_oval_5"
            android:gravity="center"
            android:textColor="#5C5A5A"
            android:textSize="30sp"
            tools:text="已报名" />
    </RelativeLayout>
</layout>