<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/tv_app_title"
            layout="@layout/layout_app_title"
            app:layout_constraintTop_toTopOf="parent" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="23px"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_back"
                android:layout_width="157px"
                android:layout_height="53px"
                android:layout_gravity="start"
                android:layout_marginStart="136px"
                android:background="@drawable/bg_btn_back_to_home_7"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/color_text_btn"
                android:textSize="19px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_app_title" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="11px"
                android:text="@string/charitableActivitiesTitle"
                android:textColor="@color/color_text_title"
                android:textSize="32px"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_app_title" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_back_to_home"
                android:layout_width="157px"
                android:layout_height="53px"
                android:layout_gravity="end"
                android:layout_marginEnd="136px"
                android:background="@drawable/bg_btn_back_to_home_7"
                android:gravity="center"
                android:text="@string/btn_text_back_to_home"
                android:textColor="@color/color_text_btn"
                android:textSize="19px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_app_title" />
        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_activity_list"
            android:layout_width="match_parent"
            android:layout_marginStart="93px"
            android:layout_marginEnd="93px"
            android:layout_height="match_parent"
            android:layout_marginTop="34px" />
    </LinearLayout>
</layout>