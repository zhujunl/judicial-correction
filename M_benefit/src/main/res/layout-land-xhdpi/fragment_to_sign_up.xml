<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/tv_app_title"
            layout="@layout/layout_app_title" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23px">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="11px"
                android:gravity="center"
                android:text="公益活动"
                android:textColor="@color/color_text_title"
                android:textSize="32px"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_back_to_home"
                android:layout_width="157px"
                android:layout_height="53px"
                android:layout_gravity="end"
                android:layout_marginEnd="93px"
                android:background="@drawable/bg_btn_back_to_home_7"
                android:gravity="center"
                android:text="@string/btn_text_back_to_home"
                android:textColor="@color/color_text_btn"
                android:textSize="19px" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66px"
            android:layout_marginStart="99px"
            android:layout_marginTop="27px"
            android:layout_marginEnd="99px"
            android:background="@drawable/bg_text_apply"
            android:orientation="horizontal">

            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="32px"
                android:textColor="#3C3C3C"
                android:textSize="20px"
                tools:text="姓名：XXX" />

            <TextView
                android:id="@+id/tv_id_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="32px"
                android:textColor="#3C3C3C"
                android:textSize="20px"
                tools:text="身份证号：3303199656966586" />

            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_marginStart="99px"
            android:layout_marginEnd="99px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="7px"
                android:layout_height="27px"
                android:background="#2850A3" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16px"
                android:text="公益活动信息"
                android:textColor="#393939"
                android:textSize="19px" />

            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_history_record"
                android:layout_width="157px"
                android:layout_height="41px"
                android:layout_marginEnd="35px"
                android:background="@drawable/bg_button_un"
                android:gravity="center"
                android:text="历史记录"
                android:textColor="#FF721F"
                android:textSize="19px" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="23px"
            android:id="@+id/rv_activity_list"
            android:layout_width="match_parent"
            android:layout_marginStart="99px"
            android:layout_marginEnd="99px"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>