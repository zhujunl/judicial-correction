<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/tv_app_title"
            layout="@layout/layout_app_title" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_back_to_home"
            android:layout_width="236px"
            android:layout_height="85px"
            android:layout_gravity="end"
            android:layout_marginTop="43px"
            android:layout_marginEnd="33px"
            android:background="@drawable/bg_btn_back_to_home"
            android:gravity="center"
            android:text="@string/btn_text_back_to_home"
            android:textColor="@color/color_text_btn"
            android:textSize="42px" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="128px"
            android:gravity="center"
            android:text="公益活动"
            android:textColor="@color/color_text_title"
            android:textSize="68px"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="179px"
            android:layout_marginStart="51px"
            android:layout_marginTop="48px"
            android:layout_marginEnd="51px"
            android:background="@drawable/bg_identity_box"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32px"
                android:layout_marginTop="42px"
                android:textColor="#3C3C3C"
                android:textSize="30px"
                tools:text="姓名：XXX" />

            <TextView
                android:id="@+id/tv_id_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32px"
                android:layout_marginTop="20px"
                android:textColor="#3C3C3C"
                android:textSize="30px"
                tools:text="身份证号：3303199656966586" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="41px"
            android:layout_marginBottom="41px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="11px"
                android:layout_height="41px"
                android:layout_marginStart="56px"
                android:background="#2850A3" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16px"
                android:textColor="#393939"
                android:textSize="36px"
                android:text="公益活动信息" />

            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_history_record"
                android:layout_width="238px"
                android:layout_height="85px"
                android:layout_marginStart="16px"
                android:layout_marginEnd="70px"
                android:background="@drawable/bg_button_un"
                android:gravity="center"
                android:text="历史记录"
                android:textColor="#FF721F"
                android:textSize="36px" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_activity_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>