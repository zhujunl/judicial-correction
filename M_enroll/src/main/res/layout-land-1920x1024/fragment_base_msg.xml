<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.miaxis.enroll.EnrollSharedViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="矫正单位："
                    android:textColor="#393939"
                    android:textSize="30sp" />


                <FrameLayout
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_et_bg">
                    <!--                selection="@{vm.justiceBureauLiveData.teamName}"-->

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinnerProvince"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:spinnerMode="dropdown" />
                </FrameLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="700dp"
                    android:layout_height="80dp"
                    android:background="@drawable/shape_et_bg"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:visibility="gone"
                    tools:text="司法所" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="姓名："
                    android:textColor="#393939"
                    android:textSize="30sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:background="@drawable/shape_et_bg"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@{vm.idCardLiveData.idCardMsg.name}"
                    tools:text="张三" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="性别："
                    android:textColor="#393939"
                    android:textSize="30sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_et_bg"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="30sp"
                    android:text="@{vm.idCardLiveData.idCardMsg.sex}"
                    tools:text="男" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="民族："
                android:textColor="#393939"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_et_bg"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@{vm.idCardLiveData.idCardMsg.nation_str}"
                tools:text="汉" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="身份证号："
                android:textColor="#393939"
                android:textSize="25sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_et_bg"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@{vm.idCardLiveData.idCardMsg.id_num}"
                tools:text="11011020200101000X" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="入矫时间："
                android:textColor="#393939"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_et_bg"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textSize="30sp"
                android:text="@{vm.todayLiveData}"
                tools:text="2021-05-05" />

        </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>