            android:textColor="#393939"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_cancel_time"
            app:layout_constraintLeft_toRightOf="@+id/tv_signal"
            app:layout_constraintTop_toTopOf="@+id/tv_cancel_time" />


        <androidx.appcompat.widget.AppCompatTextView
