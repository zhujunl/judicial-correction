<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.miaxis.judicialcorrection.leave.apply.ApplyViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/tv_app_title"
            layout="@layout/layout_app_title"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:gravity="center"
            android:text="请假申请"
            android:textColor="@color/color_text_title"
            android:textSize="68px"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_app_title" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_back_to_home"
            android:layout_width="235px"
            android:layout_height="83px"
            android:layout_marginTop="28px"
            android:layout_marginEnd="32px"
            android:background="@drawable/bg_btn_back_to_home"
            android:gravity="center"
            android:text="@string/btn_text_back_to_home"
            android:textColor="@color/color_text_btn"
            android:textSize="36px"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_app_title" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_text"
            android:layout_width="978px"
            android:layout_height="159px"
            android:layout_marginTop="27px"
            android:background="@drawable/bg_text_apply"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="32px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="姓名："
                android:textColor="#3C3C3C"
                android:textSize="30px"
                app:layout_constraintBottom_toTopOf="@+id/tv_id_card_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{data.name}"
                android:textColor="#3C3C3C"
                android:textSize="30px"
                app:layout_constraintBottom_toTopOf="@+id/tv_id_card_title"
                app:layout_constraintLeft_toRightOf="@+id/tv_name_title"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_id_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="身份证号："
                android:textColor="#3C3C3C"
                android:textSize="30px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_id_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{data.idCardNumber}"
                android:textColor="#3C3C3C"
                android:textSize="30px"
                app:layout_constraintLeft_toRightOf="@+id/tv_id_card_title"
                app:layout_constraintTop_toTopOf="@+id/tv_id_card_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/id_view"
            android:layout_width="11px"
            android:layout_height="41px"
            android:layout_marginTop="22px"
            android:background="#2850A3"
            app:layout_constraintLeft_toLeftOf="@id/ll_text"
            app:layout_constraintTop_toBottomOf="@id/ll_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15px"
            android:gravity="center"
            android:text="请假申请信息表"
            android:textColor="#393939"
            android:textSize="36px"
            app:layout_constraintBottom_toBottomOf="@id/id_view"
            app:layout_constraintLeft_toRightOf="@id/id_view"
            app:layout_constraintTop_toBottomOf="@id/ll_text"
            app:layout_constraintTop_toTopOf="@id/id_view" />

        <!--申请时间-->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5px"
            android:text="*"
            android:textColor="#F40707"
            android:textSize="27px"
            app:layout_constraintBottom_toBottomOf="@+id/tv_apply_time"
            app:layout_constraintRight_toLeftOf="@+id/tv_apply_time_title"
            app:layout_constraintTop_toTopOf="@+id/tv_apply_time" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_apply_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请时间："
            android:textColor="#393939"
            android:textSize="27px"
            app:layout_constraintBottom_toBottomOf="@+id/tv_apply_time"
            app:layout_constraintRight_toLeftOf="@id/tv_apply_time"
            app:layout_constraintTop_toTopOf="@+id/tv_apply_time" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_apply_time"
            android:layout_width="796px"
            android:layout_height="72px"
            android:layout_marginStart="5px"
            android:layout_marginTop="33px"
            android:layout_marginEnd="33px"
            android:background="@drawable/bg_text_input"
            android:drawableEnd="@mipmap/mipmap_calendar"
            android:gravity="center_vertical"
            android:paddingStart="10px"
            android:paddingEnd="26px"
            android:text="@{data.applyTime}"
            android:textColor="#393939"
            android:textSize="27px"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_view" />


        <!--请假开始日期-->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5px"
            android:text="*"
            android:textColor="#F40707"
            android:textSize="27px"
            app:layout_constraintBottom_toBottomOf="@+id/tv_apply_start_time"
            app:layout_constraintRight_toLeftOf="@+id/tv_apply_start_time_title"
            app:layout_constraintTop_toTopOf="@+id/tv_apply_start_time" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_apply_start_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请假开始日期："
            android:textColor="#393939"
            android:textSize="27px"
            app:layout_constraintBottom_toBottomOf="@+id/tv_apply_start_time"
            app:layout_constraintRight_toLeftOf="@id/tv_apply_start_time"
            app:layout_constraintTop_toTopOf="@+id/tv_apply_start_time" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_apply_start_time"
            android:layout_width="796px"
            android:layout_height="72px"
            android:layout_marginStart="5px"
            android:layout_marginTop="23px"
            android:layout_marginEnd="33px"
            android:background="@drawable/bg_text_input"
            android:drawableEnd="@mipmap/mipmap_calendar"
            android:gravity="center_vertical"
            android:paddingStart="10px"
            android:paddingEnd="26px"
            android:text="@{data.startTime}"
            android:textColor="#393939"
            android:textSize="27px"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_apply_time" />


        <!--请假结束日期-->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5px"
            android:text="*"
            android:textColor="#F40707"
            android:textSize="27px"
            app:layout_constraintBottom_toBottomOf="@+id/tv_apply_end_time"
            app:layout_constraintRight_toLeftOf="@+id/tv_apply_end_time_title"
            app:layout_constraintTop_toTopOf="@+id/tv_apply_end_time" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_apply_end_time_title"
