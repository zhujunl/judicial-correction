        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_reason"
            android:layout_width="318px"
            android:layout_height="72px"
            android:layout_gravity="start"
            android:layout_marginTop="23px"
            android:layout_marginEnd="33px"
            android:background="@drawable/bg_text_input"
            android:gravity="center_vertical|start"
            android:hint="请选择"
            android:paddingStart="10px"
            android:text="@={data.outType}"
            android:textSize="24px"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sp_street" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5px"
            android:text="*"
            android:textColor="#F40707"
            android:textSize="27px"
            app:layout_constraintBottom_toBottomOf="@+id/et_reason"
            app:layout_constraintRight_toLeftOf="@+id/tv_out_reason_title"
            app:layout_constraintTop_toTopOf="@+id/et_reason" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_out_reason_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="外出理由类型："
            android:textColor="#393939"
            android:textSize="27px"
            app:layout_constraintBottom_toBottomOf="@+id/et_reason"
            app:layout_constraintRight_toLeftOf="@id/et_reason"
            app:layout_constraintTop_toTopOf="@+id/et_reason" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_detailed"
            android:layout_width="244px"
            android:layout_height="72px"
            android:layout_marginEnd="44px"
            android:background="@drawable/bg_text_input"
            android:gravity="center_vertical"
            android:hint="如门牌号"
            android:paddingStart="10px"
            android:text="@={data.details}"
            android:textColorHint="#999999"
            android:textSize="24px"
            app:layout_constraintBottom_toBottomOf="@+id/et_reason"
            app:layout_constraintLeft_toLeftOf="@+id/sp_province"
            app:layout_constraintRight_toLeftOf="@+id/tv_out_reason_title"
            app:layout_constraintTop_toTopOf="@+id/et_reason" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="外出目的地明细："
            android:textColor="#393939"
            android:textSize="27px"
            app:layout_constraintBottom_toBottomOf="@+id/et_detailed"
            app:layout_constraintRight_toLeftOf="@id/et_detailed"
            app:layout_constraintTop_toTopOf="@+id/et_detailed" />

        <!--具体事由-->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_specific_reasons"
            android:layout_width="796px"
            android:layout_height="116px"
            android:layout_marginTop="23px"
            android:layout_marginEnd="33px"
            android:background="@drawable/bg_text_input"
            android:text="@={data.specificReasons}"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_reason" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5px"
            android:text="*"
            android:textColor="#F40707"
            android:textSize="27px"
            app:layout_constraintBottom_toBottomOf="@+id/et_specific_reasons"
            app:layout_constraintRight_toLeftOf="@+id/tv_out_specific_reasons_title"
            app:layout_constraintTop_toTopOf="@+id/et_specific_reasons" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_out_specific_reasons_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="具体事由："
            android:textColor="#393939"
            android:textSize="27px"
            app:layout_constraintBottom_toBottomOf="@+id/et_specific_reasons"
            app:layout_constraintRight_toLeftOf="@id/et_specific_reasons"
            app:layout_constraintTop_toTopOf="@+id/et_specific_reasons" />

        <!--关系：-->
