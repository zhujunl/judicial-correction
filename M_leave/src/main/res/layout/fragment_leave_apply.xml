        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_relationship"
            android:layout_width="318px"
            android:layout_height="72px"
            android:layout_gravity="start"
            android:layout_marginTop="23px"
            android:layout_marginEnd="33px"
            android:background="@drawable/bg_text_input"
            android:gravity="center_vertical|start"
            android:hint="请输入"
            android:paddingStart="10px"
            android:text="@={data.relationShip}"
            android:textSize="24px"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_specific_reasons" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5px"
            android:text="*"
            android:textColor="#F40707"
            android:textSize="27px"
            app:layout_constraintBottom_toBottomOf="@+id/et_relationship"
            app:layout_constraintRight_toLeftOf="@+id/tv_relationship_title"
            app:layout_constraintTop_toTopOf="@+id/et_relationship" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_relationship_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关系："
            android:textColor="#393939"
            android:textSize="27px"
            app:layout_constraintBottom_toBottomOf="@+id/et_relationship"
            app:layout_constraintRight_toLeftOf="@id/et_relationship"
            app:layout_constraintTop_toTopOf="@+id/et_relationship" />

        <!--临时监护人：-->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_temporary_guardian"
            android:layout_width="0dp"
            android:layout_height="72px"
            android:layout_marginEnd="44px"
            android:background="@drawable/bg_text_input"
            android:gravity="center_vertical"
            android:text="@={data.temporaryGuardian}"
            android:textColorHint="#999999"
            android:textSize="24px"
            app:layout_constraintBottom_toBottomOf="@+id/et_relationship"
            app:layout_constraintLeft_toLeftOf="@+id/et_specific_reasons"
            app:layout_constraintRight_toLeftOf="@+id/tv_relationship_title"
            app:layout_constraintTop_toTopOf="@+id/et_relationship" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_temporary_guardian_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="临时监护人："
            android:textColor="#393939"
            android:textSize="27px"
            app:layout_constraintBottom_toBottomOf="@+id/et_temporary_guardian"
            app:layout_constraintRight_toLeftOf="@id/et_temporary_guardian"
            app:layout_constraintTop_toTopOf="@+id/et_temporary_guardian" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5px"
            android:text="*"
            android:textColor="#F40707"
            android:textSize="27px"
            app:layout_constraintBottom_toBottomOf="@+id/et_temporary_guardian"
            app:layout_constraintRight_toLeftOf="@+id/tv_temporary_guardian_title"
            app:layout_constraintTop_toTopOf="@+id/et_temporary_guardian" />

        <!--联系电话：-->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_contact_number"
            android:layout_width="0dp"
            android:layout_height="72px"
            android:layout_marginTop="23px"
            android:background="@drawable/bg_text_input"
