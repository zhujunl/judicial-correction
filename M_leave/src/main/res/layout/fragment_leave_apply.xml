            android:text="请假结束日期："
            android:textColor="#393939"
            android:textSize="27px"
            app:layout_constraintBottom_toBottomOf="@+id/tv_apply_end_time"
            app:layout_constraintRight_toLeftOf="@id/tv_apply_end_time"
            app:layout_constraintTop_toTopOf="@+id/tv_apply_end_time" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_apply_end_time"
            android:layout_width="796px"
            android:layout_height="72px"
            android:layout_marginStart="5px"
            android:layout_marginTop="23px"
            android:layout_marginEnd="33px"
            android:background="@drawable/bg_text_input"
            android:drawableEnd="@mipmap/mipmap_calendar"
            android:gravity="center_vertical"
            android:paddingStart="10px"
            android:paddingEnd="26px"
            android:text="@{data.endTime}"
            android:textColor="#393939"
            android:textSize="27px"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_apply_start_time" />


        <!--外出天数-->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5px"
            android:text="*"
            android:textColor="#F40707"
            android:textSize="27px"
            app:layout_constraintBottom_toBottomOf="@+id/et_out_day_number"
            app:layout_constraintRight_toLeftOf="@+id/tv_out_day_title"
            app:layout_constraintTop_toTopOf="@+id/et_out_day_number" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_out_day_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="外出天数："
            android:textColor="#393939"
            android:textSize="27px"
            app:layout_constraintBottom_toBottomOf="@+id/et_out_day_number"
            app:layout_constraintRight_toLeftOf="@id/et_out_day_number"
            app:layout_constraintTop_toTopOf="@+id/et_out_day_number" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_out_day_number"
            android:layout_width="796px"
            android:layout_height="72px"
            android:layout_marginStart="5px"
            android:layout_marginTop="23px"
            android:layout_marginEnd="33px"
            android:background="@drawable/bg_text_input"
            android:gravity="center_vertical"
            android:hint="根据请假开始时间和结束时间自动计算"
            android:inputType="number"
            android:paddingStart="10px"
            android:paddingEnd="26px"
            android:text="@{data.days}"
            android:textColor="#393939"
            android:textColorHint="#999999"
            android:textSize="27px"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_apply_end_time" />


        <!--外出目的地-->
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5px"
            android:text="*"
            android:textColor="#F40707"
            android:textSize="27px"
            app:layout_constraintBottom_toBottomOf="@+id/sp_province"
            app:layout_constraintRight_toLeftOf="@+id/tv_out_location_title"
            app:layout_constraintTop_toTopOf="@+id/sp_province" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_out_location_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="外出目的地："
            android:textColor="#393939"
            android:textSize="27px"
            app:layout_constraintBottom_toBottomOf="@+id/sp_province"
            app:layout_constraintRight_toLeftOf="@id/sp_province"
            app:layout_constraintTop_toTopOf="@+id/sp_province" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/sp_street"
            android:layout_width="187px"
            android:layout_height="72px"
            android:layout_gravity="start"
            android:layout_marginTop="23px"
            android:layout_marginEnd="33px"
            android:autofillHints="选择街道"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_out_day_number"
            tools:background="@color/color_text_grey" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/sp_district"
            android:layout_width="187px"
            android:layout_height="72px"
            android:layout_gravity="start"
            android:layout_marginEnd="20px"
            android:autofillHints="选择县区"
            app:layout_constraintBottom_toBottomOf="@id/sp_street"
            app:layout_constraintRight_toLeftOf="@id/sp_street"
            app:layout_constraintTop_toTopOf="@id/sp_street"
            tools:background="@color/color_text_grey" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/sp_city"
            android:layout_width="187px"
            android:layout_height="72px"
            android:layout_gravity="start"
            android:layout_marginEnd="20px"
            android:autofillHints="选择市"
            app:layout_constraintBottom_toBottomOf="@id/sp_district"
            app:layout_constraintRight_toLeftOf="@id/sp_district"
            app:layout_constraintTop_toTopOf="@id/sp_district"
            tools:background="@color/color_text_grey" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/sp_province"
            android:layout_width="187px"
            android:layout_height="72px"
            android:layout_gravity="start"
            android:layout_marginEnd="20px"
            android:autofillHints="选择省份"
            app:layout_constraintBottom_toBottomOf="@id/sp_city"
            app:layout_constraintLeft_toLeftOf="@+id/et_out_day_number"
            app:layout_constraintRight_toLeftOf="@id/sp_city"
            app:layout_constraintTop_toTopOf="@id/sp_city"
            tools:background="@color/color_text_grey" />

        <!--外出目的地明细  -->
        <!--        <androidx.appcompat.widget.AppCompatSpinner-->
        <!--            android:id="@+id/sp_reason"-->
        <!--            android:layout_width="318px"-->
        <!--            android:layout_height="72px"-->
        <!--            android:layout_gravity="start"-->
